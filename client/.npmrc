# Führt KEINE preinstall/postinstall/prepare-Skripte aus
ignore-scripts=true

# Verhindert ungewollte Änderungen am Lockfile
package-lock=true

# Nutzt strikt das vorhandene Lockfile (wichtig für CI)
save=false

# Deaktiviert automatisch generierte package-lock-Updates
update-notifier=false

# Lässt Warnungen erscheinen, falls Pakete fehlen/überschrieben werden
strict-peer-deps=true
